+            shadow-glow
+            backdrop-blur-md
+            hover:bg-white/15 hover:border-neon-cyan/40
+            transition-all duration-300
+          "
+          aria-label="Open chat"
+        >
+          <div className="absolute inset-0 rounded-full bg-gradient-to-br from-neon-cyan/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
+          <MessageCircle className="relative mx-auto text-neon-cyan group-hover:scale-105 transition-transform" size={22} />
+        </button>
+      )}
+
+      {/* Panel */}
+      {open && (
+        <div className="w-[360px] max-w-[90vw]">
+          <GlassCard className="p-0 overflow-hidden">
+            {/* Header */}
+            <div className="flex items-center justify-between px-4 py-3 border-b border-white/10 bg-white/5">
+              <div className="flex items-center gap-2">
+                <div className="h-8 w-8 rounded-lg bg-white/10 border border-white/10 flex items-center justify-center">
+                  <Bot className="text-neon-cyan" size={18} />
+                </div>
+                <div className="leading-tight">
+                  <div className="text-white font-semibold">Assistant</div>
+                  <div className="text-xs text-gray-400 flex items-center gap-2">
+                    <span className={`h-2 w-2 rounded-full ${connected ? "bg-neon-cyan" : "bg-gray-600"}`} />
+                    {connecting ? "Connecting…" : connected ? "Online" : "Offline"}
+                  </div>
+                </div>
+              </div>
+
+              <div className="flex items-center gap-1">
+                <button
+                  type="button"
+                  className="p-2 rounded-lg hover:bg-white/10 transition-colors"
+                  onClick={() => setOpen(false)}
+                  aria-label="Minimize chat"
+                  title="Minimize"
+                >
+                  <Minus className="text-gray-300" size={18} />
+                </button>
+                <button
+                  type="button"
+                  className="p-2 rounded-lg hover:bg-white/10 transition-colors"
+                  onClick={() => setOpen(false)}
+                  aria-label="Close chat"
+                  title="Close"
+                >
+                  <X className="text-gray-300" size={18} />
+                </button>
+              </div>
+            </div>
+
+            {/* Messages */}
+            <div
+              ref={scrollRef}
+              className="h-[360px] overflow-y-auto px-4 py-3 space-y-3 scrollbar-thin scrollbar-thumb-white/10"
+            >
+              {messages.map((m) => (
+                <div key={m.id} className={`flex ${m.from === "user" ? "justify-end" : "justify-start"}`}>
+                  <div
+                    className={`
+                      max-w-[85%] rounded-2xl px-3 py-2 text-sm leading-relaxed
+                      ${m.from === "user"
+                        ? "bg-neon-cyan/15 border border-neon-cyan/20 text-white"
+                        : m.from === "bot"
+                          ? "bg-white/10 border border-white/10 text-gray-100"
+                          : "bg-white/5 border border-white/10 text-gray-300 italic"}
+                    `}
+                  >
+                    {m.text}
+                  </div>
+                </div>
+              ))}
+
+              {connecting && (
+                <div className="flex items-center gap-2 text-xs text-gray-400">
+                  <Loader2 className="animate-spin" size={14} />
+                  Connecting…
+                </div>
+              )}
+            </div>
+
+            {/* Composer */}
+            <div className="p-3 border-t border-white/10 bg-white/5">
+              <div className="flex items-center gap-2">
+                <input
+                  value={input}
+                  onChange={(e) => setInput(e.target.value)}
+                  onKeyDown={(e) => {
+                    if (e.key === "Enter") void send();
+                  }}
+                  className="
+                    flex-1 bg-white/5 border border-white/10 rounded-lg px-3 py-2
+                    text-white placeholder:text-gray-500
+                    focus:outline-none focus:border-neon-cyan/50 focus:ring-1 focus:ring-neon-cyan/50
+                    transition-all
+                  "
+                  placeholder="Type a message…"
+                />
+
+                <Button
+                  variant="primary"
+                  className="px-3 py-2"
+                  onClick={() => void send()}
+                  disabled={!input.trim()}
+                  aria-label="Send"
+                >
+                  <Send size={16} />
+                </Button>
+              </div>
+
+              <div className="mt-2 flex flex-wrap gap-2">
+                {["Balance", "RecentTx", "Accounts", "Help"].map((cmd) => (
+                  <button
+                    key={cmd}
+                    type="button"
+                    onClick={() => setInput(cmd)}
+                    className="text-xs px-2 py-1 rounded-md bg-white/5 border border-white/10 text-gray-300 hover:text-white hover:border-neon-cyan/30 hover:bg-white/10 transition-all"
+                  >
+                    {cmd}
+                  </button>
+                ))}
+              </div>
+            </div>
+          </GlassCard>
+        </div>
+      )}
+    </div>
+  );
+}
+
+export default ChatWidget;
