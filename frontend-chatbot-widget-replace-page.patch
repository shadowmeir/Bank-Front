+import { useEffect, useMemo, useRef, useState } from "react";
+import type * as signalR from "@microsoft/signalr";
+import { Bot, Send, X, Minus, MessageCircle, Loader2 } from "lucide-react";
+
+import { GlassCard } from "../ui/GlassCard";
+import { Button } from "../ui/Button";
+import { createChatbotConnection } from "../../lib/chatbot";
+
+type ChatMsg = {
+  id: string;
+  from: "user" | "bot" | "system";
+  text: string;
+  ts: number;
+};
+
+function uid() {
+  return Math.random().toString(16).slice(2) + Date.now().toString(16);
+}
+
+export function ChatWidget() {
+  const [open, setOpen] = useState(false);
+  const [connecting, setConnecting] = useState(false);
+  const [connected, setConnected] = useState(false);
+
+  const [input, setInput] = useState("");
+  const [messages, setMessages] = useState<ChatMsg[]>([
+    {
+      id: uid(),
+      from: "bot",
+      text: "Hi! I’m your NeoBank assistant. Try: Balance, RecentTx, Accounts, Help.",
+      ts: Date.now(),
+    },
+  ]);
+
+  const connRef = useRef<signalR.HubConnection | null>(null);
+  const scrollRef = useRef<HTMLDivElement | null>(null);
+
+  // Keep the connection URL stable (API_BASE_URL can change by env, but it's constant at runtime).
+  const connFactory = useMemo(() => createChatbotConnection, []);
+
+  useEffect(() => {
+    // auto-scroll to bottom on new messages
+    const el = scrollRef.current;
+    if (!el) return;
+    el.scrollTop = el.scrollHeight;
+  }, [messages.length, open]);
+
+  useEffect(() => {
+    // Connect only when the widget is open.
+    if (!open) {
+      setConnected(false);
+      setConnecting(false);
+
+      const c = connRef.current;
+      connRef.current = null;
+
+      if (c) {
+        c.stop().catch(() => void 0);
+      }
+      return;
+    }
+
+    let disposed = false;
+
+    async function connect() {
+      setConnecting(true);
+
+      const connection = connFactory();
+      connRef.current = connection;
+
+      connection.on("ReceiveBotMessage", (text: string) => {
+        if (disposed) return;
+        setMessages((m) => [...m, { id: uid(), from: "bot", text: String(text ?? ""), ts: Date.now() }]);
+      });
+
+      connection.onclose(() => {
+        if (disposed) return;
+        setConnected(false);
+      });
+
+      try {
+        await connection.start();
+        if (disposed) return;
+
+        setConnected(true);
+        setMessages((m) => [
+          ...m,
+          { id: uid(), from: "system", text: "Connected.", ts: Date.now() },
+        ]);
+      } catch (e) {
+        if (disposed) return;
+        setMessages((m) => [
+          ...m,
+          { id: uid(), from: "system", text: "Couldn’t connect to chat. Try again in a moment.", ts: Date.now() },
+        ]);
+      } finally {
+        if (!disposed) setConnecting(false);
+      }
+    }
+
+    void connect();
+
+    return () => {
+      disposed = true;
+    };
+  }, [open, connFactory]);
+
+  async function send() {
+    const text = input.trim();
+    if (!text) return;
+
+    setInput("");
+    setMessages((m) => [...m, { id: uid(), from: "user", text, ts: Date.now() }]);
+
+    const c = connRef.current;
+    if (!c || c.state !== "Connected") {
+      setMessages((m) => [
+        ...m,
+        { id: uid(), from: "system", text: "Not connected yet…", ts: Date.now() },
+      ]);
+      return;
+    }
+
+    try {
+      await c.invoke("SendToBot", text);
+    } catch {
+      setMessages((m) => [
+        ...m,
+        { id: uid(), from: "system", text: "Failed to send message.", ts: Date.now() },
+      ]);
+    }
+  }
+
+  return (
+    <div className="fixed bottom-5 right-5 z-[60]">
+      {/* Launcher */}
